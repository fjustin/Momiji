<% @search_articles.each_with_index do|article,i|%>
    <% if i==0 %>
        <div class="article" style="list-style:none;">
          <% if article.image?%>
              <%= image_tag article.image.url %>
          <%else%>
              <%= image_tag 'noimage.jpg'%>
          <%end%>
          <div class="title">
            <%= link_to article.title, article_path(article.id) %>
          </div>
          <div class="description">
            <%= simple_format article.content.truncate(100)%>
          </div>
          <div class="firstborder">
          </div>
        </div>

    <%else%>
        <% if i%2==1%>
        <div class="second-zone">
            <% if article.image?%>
                <%= image_tag article.image.url %>
            <%else%>
                <%= image_tag 'noimage.jpg'%>
            <%end%>
          <p>
            <%= link_to article.title, article_path(article.id) %>
          </p>
          <div class="description-zone">
            <%= simple_format article.content.truncate(100)%>
          </div>
          <%if user_signed_in?%>
              <%= link_to '編集',edit_article_path(article.id) %>
          <%end%>
        </div>


          <%else%>


            <div class ="third-zone">
              <% if article.image?%>
                  <%= image_tag article.image.url %>
              <%else%>
                  <%= image_tag 'noimage.jpg'%>
              <%end%>
              <p>
                <%= link_to article.title, article_path(article.id) %>
              </p>
              <div class="description-zone">
                <%= simple_format article.content.truncate(100)%>
              </div>
              <%if user_signed_in?%>
                  <%= link_to '編集',edit_article_path(article.id) %>
              <%end%>
            </div>
            <%end%>
    <%end%>
<%end%>
<div class="auth">
<% if user_signed_in?%>
    <%= link_to '記事を投稿する',new_article_path %>
    <%= link_to 'ログアウト',destroy_user_session_path,method: :delete%>
<%else%>
    <%= link_to '管理者としてログイン',new_user_session_path,{:class => 'log'} %>
<%end%>
</div>

<div class="paginate">
  <%= paginate @articles%>
</div>
