<h1>記事一覧</h1>

<ul>
  <% @articles.each do|article|%>
      <li>
        <% if article.image?%>
          <%= image_tag article.image.url %>
        <%else%>
          <%= image_tag 'noimage.jpg'%>
        <%end%>
        <%= link_to article.title, article_path(article.id) %>
        <%= link_to '編集',edit_article_path(article.id) %>
      </li>
  <%end%>
</ul>

<%= link_to '記事を投稿する',new_article_path %>
