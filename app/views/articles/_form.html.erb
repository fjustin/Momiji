<%= form_for @article do |f|%>
    <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= @article.errors.count %>件のエラーがあります。</h2>

          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<div id="form-style">
    <p><%= f.label :image%><br>
    <%= f.file_field :image%></p>

<div class="title-style">
    <p> <%= f.label :title%><br>
      <%= f.text_field :title,:placeholder => "タイトルを入力"  %>
    </p>
</div>
  <div class="des-style">
    <p>
      <%= f.label :description%><br>
      <%= f.text_field :description,:placeholder => "説明文を入力" %>
    </p>
  </div>
  <div class="field">
    <%= f.label :tag_list, "興味・関心（カンマ区切り）" %><br>
    <%= f.text_field :tag_list %>
  </div>
  <div class="content-style">
    <p><%= f.label :content%><br>
      <%= f.text_area :content, :placeholder =>"記事本文を入力"%>
    </p>
  </div>
    <p>
      <%= link_to @article.status,article_toggle_status_path(@article), method: :patch%>
      <%= f.submit%>
    </p>

</div>
<% end %>
