<%= form_for @article do |f|%>
    <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= @article.errors.count %>件のエラーがあります。</h2>

          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <p><%= f.label :image%><br>
    <%= f.file_field :image%></p>

    <p> <%= f.label :title%><br>
      <%= f.text_field :title %>
    </p>
    <p><%= f.label :content%><br>
      <%= f.text_area :content%>
    </p>
    <p>
      <%= f.submit%>
    </p>
<% end %>
