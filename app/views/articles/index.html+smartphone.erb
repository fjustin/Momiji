
<% @articles.each do|article|%>
    <div class="article_sp" style="list-style:none;">
      <% if article.image?%>
          <%= image_tag article.image.url %>
      <%else%>
          <%= image_tag 'noimage.jpg'%>
      <%end%>
      <div class="title_sp">
        <%= link_to article.title, article_path(article.id) %>
      </div>

      <div class="desc-sp">
        <%= simple_format article.description.truncate(50)%>
      </div>
    </div>

    <div class="border_sp">
    </div>

    <div class="paginate">
      <%= paginate @articles%>
    </div>

<%end%>
